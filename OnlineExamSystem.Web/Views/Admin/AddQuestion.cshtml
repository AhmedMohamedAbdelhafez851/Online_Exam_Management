@* <!-- OnlineExamSystem.Web/Views/Admin/AddQuestion.cshtml -->
@model OnlineExamSystem.Web.Models.ViewModels.QuestionViewModel
@{
    ViewData["Title"] = "Add Question";
}
<h2>Add Question to Exam @Model.ExamId</h2>
<form asp-action="AddQuestion" method="post">
    <input type="hidden" asp-for="ExamId" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Choices (4 required, mark one as correct)</label>
        @for (int i = 0; i < 4; i++)
        {
            <div>
                <input asp-for="Choices[i].Text" class="form-control" placeholder="Choice @(i + 1)" />
                <input asp-for="Choices[i].IsCorrect" type="radio" value="true" /> Correct
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Add Question</button>
</form> *@